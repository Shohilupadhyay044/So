<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/holo_blue_dark"/>

    <TextView
        android:layout_width="397dp"
        android:layout_height="62dp"
        android:layout_margin="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@android:color/holo_blue_dark"
        android:drawableStart="@drawable/ic_vector__12_"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:text="Add Buyers"
        android:textColor="@color/white"
        android:textSize="25dp" />


    <TextView
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:layout_height="20dp"
        android:textColor="@color/black"
        android:text="Organization Name"
        android:layout_marginTop="100dp"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/org"
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:layout_height="45dp"
        android:layout_marginTop="140dp"
        android:backgroundTint="@color/black"/>

    <TextView
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:layout_height="20dp"
        android:text="Customer Name"
        android:textColor="@color/black"
        android:layout_marginTop="220dp"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/customer"
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:layout_height="45dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="@color/black"/>

    <TextView
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:layout_height="20dp"
        android:text="Mobile Number"
        android:textColor="@color/black"
        android:layout_marginTop="280dp"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/Mobile"
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:layout_height="45dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="@color/black"/>

    <TextView
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:layout_height="20dp"
        android:text="Email"
        android:textColor="@color/black"
        android:layout_marginTop="340dp"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>

    <EditText
       android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:layout_height="45dp"
        android:layout_marginTop="360dp"
        android:backgroundTint="@color/black"/>

    <TextView
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:layout_height="20dp"
        android:text="Address"
        android:textColor="@color/black"
        android:layout_marginTop="400dp"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/address"
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:layout_height="45dp"
        android:layout_marginTop="430dp"
        android:backgroundTint="@color/black"/>

    <Spinner
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:layout_height="20dp"
        android:text="Manufacture"
        android:layout_marginTop="460dp"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/Manufacture"
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="@color/black"/>

    <TextView
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:layout_height="20dp"
        android:textColor="@color/black"
        android:text="TaxId"
        android:layout_marginTop="545dp"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/Tax"
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:layout_height="45dp"
        android:layout_marginTop="570dp"
        android:backgroundTint="@color/black"/>

    <TextView
        android:layout_width="300dp"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"
        android:layout_height="20dp"
        android:text="Company Id"
        android:layout_marginTop="625dp"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/company"
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:layout_height="45dp"
        android:layout_marginTop="655dp"
        android:backgroundTint="@color/black"/>






</RelativeLayout>